<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CRMC Administration</title>
    <link href="~/css/vendor.min.css" rel="stylesheet" />
    <link href="~/css/site.min.css" rel="stylesheet" />
    
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CRMC Administration", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Visitors", "Home")">
                            <i class="fa fa-users" aria-hidden="true"></i> 
                            Visitors
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Censors", "Home")">
                            <i class="fa fa-ban" aria-hidden="true"></i>
                            Censors
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Configuration", "Home")">
                            <i class="fa fa-wrench" aria-hidden="true"></i>
                            Configuration
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Upload", "Home")">
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                            Donor Upload
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Users", "Home")">
                            <i class="fa fa-cogs" aria-hidden="true"></i>
                            Users
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")

            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="pull-right hidden-xs">
                <b>Version</b> @typeof(web.MvcApplication).Assembly.GetName().Version
            </div>
            <strong>Copyright &copy; @DateTime.Now.Year - CRMC Administration</strong>
        </footer>
    </div>

    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/app.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/signalr/hubs"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
